{% extends "root/blocks/contentlist.html.twig" %}

{% block mainContent %}

	{% if isLoggedIn %} 
		{%if query.type=="manual" or query.type=="simple"%}
			<div id="list-editmode" class="hide">
				<div class="btn-group pull-left">
					<a class="btn btn-primary" href="#" style="margin-top: 10px;" id="btn-add-content" onclick="createContentWindow('{{query.type}}','{{data[0].typeId}}','{{query.id}}')">
						<i class="icon-plus-sign"></i> Ajouter un contenu
					</a>
				</div>
			</div>
			<div class="clearfix"></div>
		{%endif%}
	{%endif%}

	{% block mainList %} 
		<ul class="thumbnails">
			{% for content in data %}
				<li class="span3"><div class="editable" id="{{ content.id }}_body">{{ content.body | cleanHtml }}</div></li>
			{% endfor %}
		</ul>
	{% endblock %}

{% endblock %}
